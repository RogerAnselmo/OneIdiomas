@model ICollection<ACTurmaViewModel>
@{
    Layout = null;
}

<table id="tableTurmas" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Nível
            </th>
            <th>
                Dias
            </th>
            <th>
                Horário
            </th>
            <th>
                Professor
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ACTurmaViewModel Turma in Model)
        {
            <tr>
                <td>
                    @Turma.ACNivelViewModel.Descricao
                </td>
                <td>
                    @Turma.DiasDeAula(Turma.DiasDaSemana)
                </td>
                <td>
                    @(Turma.HoraInicio +'-' + Turma.HoraFim)
                </td>
                <td>
                    @Turma.ACProfessorViewModel.NomeCompleto
                </td>
                <td>
                    <a href="" class="btn btn-editar btn-default" title="Visualizar"><i class="glyphicon glyphicon-eye-open"></i></a>
                    <a href="@Url.Action("Cadastro-Turma", "Gerenciar-Turma",new { id = Turma.CodigoTurma })" class="btn btn-editar btn-primary" title="Editar"><i class="glyphicon glyphicon-edit"></i></a>
                    <a class="btn btn-editar btn-danger" title="Excluir" onclick="ExcluirTurma(@Turma.CodigoTurma, this)"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/CoreJs/ACTurma/Lista/Grid.js"></script>