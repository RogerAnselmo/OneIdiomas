@model One.Application.ViewModels.ACAlunoVM.CadastroAlunoViewModel
@{
    ViewData["Title"] = "Novo Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                </div>

                <h2 class="panel-title">@ViewBag.Title</h2>
            </header>
            <div class="panel-body">
                <section class="panel form-wizard" id="w2">
                    <div class="tabs">
                        <ul class="nav nav-tabs nav-justify">
                            <li class="active">
                                <a href="#w2-account" data-toggle="tab" class="text-center">
                                    Aluno
                                </a>
                            </li>
                        </ul>
                        <form class="form-horizontal" novalidate="novalidate">
                            <div class="tab-content">

                                <div style="display: none">
                                    <input asp-for="CodigoAluno" />
                                    <input asp-for="CodigoUsuario" />
                                    <input asp-for="CodigoTelefone" />
                                    <input asp-for="CodigoEndereco" />
                                </div>

                                @*ABA Aluno*@
                            <div id="w2-account" class="tab-pane active">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" asp-for="NomeCompleto"></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control input-sm" asp-for="NomeCompleto">
                                    </div>
                                </div>

                                @*Nascimento/Idade/Telefone*@
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" asp-for="DataNascimento"></label>
                                    <div class="col-sm-2">
                                        <input one-ui="date" class="form-control input-sm" asp-for="DataNascimento">
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="Idade"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="Idade">
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="Telefone"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="Telefone">
                                    </div>
                                </div>

                                @*RG/CPF/Dia de Vencimento*@
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" asp-for="RG"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="RG">
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="CPF"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="CPF">
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="CEP"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="CEP">
                                    </div>
                                </div>

                                @*CEP/UF/Cidade*@
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" asp-for="Logradouro"></label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control input-sm" asp-for="Logradouro">
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="Numero"></label>
                                    <div class="col-sm-2">
                                        <input class="form-control input-sm" asp-for="Numero">
                                    </div>
                                </div>

                                @*Logradouro/Bairro*@
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" asp-for="CodigoUF"></label>
                                    <div class="col-sm-2">
                                        <select class="form-control input-sm" asp-for="CodigoUF">

                                            @foreach (GEUFViewModel uf in ViewBag.ListaUF)
                                            {
                                                <option value="@uf.CodigoUF" selected="@(Model.CodigoUF== uf.CodigoUF ? "selected": "")">
                                                    @uf.Descricao
                                                </option>
                                            }

                                        </select>
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="CodigoCidade"></label>
                                    <div class="col-sm-2">
                                        <select class="form-control input-sm" asp-for="CodigoCidade">
                                            @foreach (GECidadeViewModel cidade in ViewBag.ListaCidade)
                                            {
                                                if (Model.CodigoCidade == cidade.CodigoCidade)
                                                {
                                                    <option value="@cidade.CodigoCidade" selected="selected">
                                                        @cidade.Descricao
                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@cidade.CodigoCidade">
                                                        @cidade.Descricao
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <label class="col-sm-1 control-label" asp-for="CodigoBairro"></label>
                                    <div class="col-sm-2">
                                        <select class="form-control input-sm" asp-for="CodigoBairro">
                                            @foreach (GEBairroViewModel bairro in ViewBag.ListaBairro)
                                            {
                                                if (Model.CodigoBairro == bairro.CodigoBairro)
                                                {
                                                    <option value="@bairro.CodigoBairro" selected="selected">
                                                        @bairro.Descricao
                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@bairro.CodigoBairro">
                                                        @bairro.Descricao
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-8"></div>
                            <a class="bt-salvar btn btn-sm btn-default col-md-1 col-xs-12">Salvar</a>
                            <a class="bt-cancelar btn btn-sm btn-default col-md-1 col-xs-12">Cancelar</a>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>
</div>

<script src="~/CoreJs/ACAluno/Cadastro/Aluno.js"></script>
<script src="~/CoreJs/ACAluno/Cadastro/Common.js"></script>


